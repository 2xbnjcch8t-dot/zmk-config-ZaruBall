        extra1 {
            display-name = "Extra1";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans            &trans  &trans  &trans  &trans               &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans            &trans  &trans  &trans  &trans               &kp T   &kp R   &kp E   &kp W   &kp Q   &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans    &kp GRAVE  &kp G   &kp F   &kp D   &kp S   &kp A   &none
&trans  &trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans    &kp B      &trans  &kp V   &kp C   &kp X   &kp Z   &none
&trans  &trans          &trans  &trans  &trans  &trans                                      &trans     &trans                                  &none
            >;

            sensor-bindings = <&excel>;
        };

        extra2 {
            display-name = "Extra2";
            bindings = <
&kp UNDERSCORE  &kp NON_US_BACKSLASH  &kp LESS_THAN   &kp GREATER_THAN  &kp QUESTION  &kp PLUS            &trans  &trans  &trans  &trans               &kp EXCLAMATION  &kp DOUBLE_QUOTES     &kp HASH               &kp DOLLAR         &kp PERCENT       &kp AMPERSAND
&kp TILDE       &kp DOUBLE_QUOTES     &kp UNDERSCORE  &kp BSLH          &none         &none               &trans  &trans  &trans  &trans               &kp SQT          &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp MINUS          &kp EQUAL         &kagikakko
&trans          &trans                &trans          &trans            &trans        &trans    &trans    &trans  &trans  &trans  &trans    &kp TILDE  &kp BSLH         &kp PIPE              &kp AT_SIGN            &kp GRAVE          &kp LEFT_BRACKET  &kp LEFT_BRACE
&trans          &trans                &trans          &trans            &trans        &trans    &trans    &trans  &trans  &trans  &trans    &none      &kp PLUS         &kp COLON             &kp ASTERISK           &kp RIGHT_BRACKET  &kp RIGHT_BRACE   &kp SLASH
&trans          &trans                                &trans            &trans        &trans    &trans                                      &trans     &trans                                                                                             &trans
